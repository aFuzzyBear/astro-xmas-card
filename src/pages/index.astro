<style lang="scss">
 *,::before,::after{
	margin: 0;
	box-sizing: border-box;
	border: 0.5px dashed red;
}
body{
	width: 100vw;
	height: 100vh;
	overflow: hidden;
	background-color:  #254B43;
}
header{
	width: 100vw;
	position: fixed;
	top: 0;
	.logo{
		background-image: url('/svg/logo.svg');
		background-size: contain;
		background-repeat: no-repeat;
		width: 2.5vw;
		height: 5vh;
		margin:1rem auto;
	}
	.lights{
		background-image: url('/svg/lights.svg');
		height: 15vh;
		width: 10vw;
		&-left{
			position: fixed;
			top: 0;
			left: 0;
			transform: rotate(270deg);
		}
		&-right{
			position: fixed;
			right: 0;
		}
	}

}

.noise{
	position: absolute;
	mix-blend-mode: overlay;
	opacity: 0.5;
	z-index: 0;
	background-image: url('/noise.png');
	width: 100vw;
	height: 100vh;
}

.spotlight {
	position: absolute;
    width: 65%;
    height: 95%;
    transform: translate(28%, -0%);
    top: 0;
    background: #f7f7f7;
    mix-blend-mode: overlay;
    opacity: 0.55;
	filter: blur(110px) blur(111px);
    z-index: 2;
	border-radius:100% ;
}
.bottom-bg {
	position: fixed;
	width: 100%;
	height: 100%;
	transform: translate(0%, 45%);
	background: #0F1F1C;
	/* bg curve */
	clip-path: inset(0% -30% -58% -28% round 51%/34%);
}


.globe-wrapper{
    width: 85vw;
    position: relative;
    top: 20vh;
    margin: auto;
}

.globe-img {
	height: clamp(50vmin,60vmax,55vh);
    background: url(/globe.png);
    background-repeat: no-repeat;
    background-size: contain;
    background-position: center;
    width: 100%;
}
.type{
	background-image: url(/svg/type.svg);
    height: 28vh;
    width: 100%;
    background-repeat: no-repeat;
    background-position: right;
}

</style>


	