<style lang="scss">
 *,::before,::after{
	margin: 0;
	box-sizing: border-box;
 }
html{
	width: 100vw;
	height: 100%;
	overflow: hidden;
	background: #000;
}
.background{
	width: 100vw;
	height: 100vh;
	background-color:  #254B43;
}

.noise{
	position: absolute;
	background: url('/noise.png');
	mix-blend-mode: overlay;
	width: 100%;
	height: 100%;
	opacity: 0.5;
	z-index: 1;
}

.spotlight {
	position: absolute;
    width: 65%;
    height: 95%;
    transform: translate(28%, -0%);
    top: 14%;
    background: #f7f7f7;
    mix-blend-mode: overlay;
    opacity: 0.55;
    filter: blur(110px) blur(111px);
    z-index: 2;
    clip-path: circle(1000%);
}
.bottom-bg {
	position: fixed;
	width: 100%;
	height: 100%;
	transform: translate(0%, 45%);
	// top: 45%;
	background: #0F1F1C;
	/* bg curve */
	clip-path: inset(1% -4% -58% -5% round 51%/34%);

}

.globe-wrapper{
	// display: block;
	position: fixed;
	width: 65%;
	height: 65%;
	top: 50%;
	transform: translate(50%,-50%);
}
.globe-img{
	position: relative;
    width: 100%;
    height: 100%;
    background:url('/globe.png');
    // background-image: url('/svg/globe (3).svg');
    background-repeat: no-repeat;
	background-size: contain;
    filter: drop-shadow(0.1px 0px 0px #151c1a) drop-shadow(3.2px 1.8px 1px rgba(255,255,255,0.1882352941));
}

